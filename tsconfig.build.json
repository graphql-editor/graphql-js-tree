{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./lib",
    "lib": ["es6", "es7", "esnext", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": ["lib", "node_modules", "docs", "**/__tests__", "generated", "examples", "**/*.spec.ts"]
}
